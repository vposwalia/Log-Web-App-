<!DOCTYPE html>
<html>
<head>
    <title>Mission Details</title>
    <link rel="stylesheet" type="text/css" href="/styles.css">
</head>
<body>
    <div class="container">
        <h1>Mission Details</h1>
        <form id="missionForm">
            <label for="date">Date:</label>
            <input type="date" id="date" name="date" required><br>
            
            <label for="time_of_mission">Time of Mission:</label>
            <input type="time" id="time_of_mission" name="time_of_mission" required><br>
            
            <label for="total_time">Total Time:</label>
            <input type="time" id="total_time" name="total_time" required><br>
            
            <label for="pilot_name">Pilot Name:</label>
            <input type="text" id="pilot_name" name="pilot_name" required><br>
            
            <label for="spotter_name">Spotter Name:</label>
            <input type="text" id="spotter_name" name="spotter_name" required><br>
            
            <label for="aircraft_name">Aircraft Name:</label>
            <input type="text" id="aircraft_name" name="aircraft_name" required><br>
            
            <label for="aircraft_type">Aircraft Type:</label>
            <input type="text" id="aircraft_type" name="aircraft_type" required><br>
            
            <label for="mission">Mission:</label>
            <input type="text" id="mission" name="mission" required><br>
            
            <label for="maneuvers_performed">Maneuvers Performed:</label>
            <textarea id="maneuvers_performed" name="maneuvers_performed" rows="4"></textarea><br>
            
            <label for="flight_description">Flight Description:</label>
            <textarea id="flight_description" name="flight_description" rows="4"></textarea><br>
            
            <label for="damage_taken">Damage Taken:</label>
            <textarea id="damage_taken" name="damage_taken" rows="4"></textarea><br>
            
            <button type="submit">Submit</button>
        </form>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const missionForm = document.getElementById('missionForm');
    
            missionForm.addEventListener('submit', async (event) => {
                event.preventDefault();
    
                const formData = new URLSearchParams(new FormData(missionForm));
                try {
                    const response = await fetch('/submit', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded'
                        },
                        body: formData
                    });
    
                    if (response.status === 200) { // Check for status code
                        alert('Mission details submitted successfully.');
                        missionForm.reset();
                    } else {
                        alert('An error occurred while submitting mission details.');
                    }
                } catch (error) {
                    alert('An error occurred while submitting mission details.');
                    console.error(error);
                }
            });
        });
    </script>
</body>
</html>
